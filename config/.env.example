# ------------------------------------------------------------------------------
# ‚ùñ B. SISTEM POINT (MAX BASE POINT)
# ------------------------------------------------------------------------------
SK_MAX_POINT_L1=5
SK_MAX_POINT_L2=8
SK_MAX_POINT_L3=10
SK_MAX_POINT_L4=12
SK_MAX_POINT_L5=15

# ------------------------------------------------------------------------------
# ‚ùñ C. RASIO & AMBANG BATAS (THRESHOLDS)
# ------------------------------------------------------------------------------
# Min point sebagai rasio dari max point (contoh: 0.20 = 20% point sisa minimal)
SK_MIN_POINT_RATIO=0.20
# Syarat mendapatkan Speed Bonus: Menjawab di awal X% waktu (contoh 0.20 = 20%)
SK_SPEED_THRESHOLD=0.20
# Jumlah jawaban berturut-turut untuk mulai mendapatkan Bonus Streak
SK_STREAK_THRESHOLD=3
# Threshold jumlah huruf untuk Bonus Kata Langka
SK_RARE_WORD_LENGTH=8

# ------------------------------------------------------------------------------
# ‚ùñ D. HADIAH BONUS POINT (NILAI FLAT)
# ------------------------------------------------------------------------------
SK_BONUS_STREAK=2
SK_BONUS_SPEED=2
SK_BONUS_COMEBACK=1
SK_BONUS_RARE_WORD=3
SK_BONUS_WINNER=10

# ------------------------------------------------------------------------------
# ‚ùñ E. SYSTEM MULTIPLIER (PANJANG KATA)
# ------------------------------------------------------------------------------
# ‚ö†Ô∏è TIDAK ADA batasan minimal/maksimal panjang kata per level!
# User bebas menjawab kata pendek atau panjang di level apapun (1 - 5).
# Panjang kata HANYA menentukan MULTIPLIER point secara hardcoded:
#
#   ‚Ä¢ Sangat Pendek : 2 huruf (0.30x), 3 huruf (0.45x)
#   ‚Ä¢ Pendek        : 4 huruf (0.60x), 5 huruf (0.75x)
#   ‚Ä¢ Standar       : 6 huruf (0.88x), 7 huruf (1.00x) -> BASELINE
#   ‚Ä¢ Panjang (+KATA LANGKA) : 8 huruf (1.15x), 9 (1.25x), 10 (1.40x)
#   ‚Ä¢ Sangat Panjang         : 11 (1.55x), 12 (1.70x), 13+ (2.00x)
#
# Bonus KATA LANGKA aktif otomatis untuk kata >= SK_RARE_WORD_LENGTH.

# ------------------------------------------------------------------------------
# ‚ùñ F. PENGATURAN LOBBY & GAME
# ------------------------------------------------------------------------------
# Waktu tunggu lobby sebelum game dibatalkan / dimulai (detik)
SK_LOBBY_TIMEOUT=60
# Kebutuhan Pemain per-room
SK_MAX_PLAYERS=10
SK_MIN_PLAYERS=2
